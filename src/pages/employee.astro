    <div class="row">
      <div class="col-6">
        <h3>HR Connect</h3>
      </div>
      <div class="col-6">
        <a href="/logout" class="btn btn-danger float-end">Logout</a>
      </div>
    </div>
  </div>
</header>
  <div class="container  mt-4 shadow-5 rounded-3 p-3 custom-header">
    <div class="col-lg-12">
      <!-- <EmployeeGrid client:load /> -->
